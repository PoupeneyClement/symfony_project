{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'container'}}) }}
{{ form_row(registrationForm.email , {'attr': {'class': 'form-control container'}}) }}
{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control container'}}) }}
{{ form_row(registrationForm.agreeTerms) }}

<span><button type="submit" class="btn btn-lg btn-success">Register</button><span>
{{ form_end(registrationForm) }}
{% endblock %}